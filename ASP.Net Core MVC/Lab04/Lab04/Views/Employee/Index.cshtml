
@model IEnumerable<Lab04.Models.Employee>
@{
    ViewBag.Title = "Home";
}

<h2 class="mt-5 text-center">All Employees</h2>

@Html.ActionLink("Add Employee", "Create", "Employee", new { @class = "btn pt-2 butto text-center" })

<table class="table table-hover table-striped text-center table-light">
    <tr>
        <th>@Html.DisplayNameFor(employee => employee.Id)</th>
        <th>@Html.DisplayNameFor(employee => employee.FName)</th>
        <th>@Html.DisplayNameFor(employee => employee.Url)</th>
        <th>@Html.DisplayNameFor(employee => employee.Email)</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(dummy => item.Id)</td>
            <td>@Html.DisplayFor(dummy => item.FName)</td>
            <td>@Html.DisplayFor(dummy => item.Url)</td>
            <td>@Html.DisplayFor(dummy => item.Email)</td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Employee", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-primary" })
                @Html.ActionLink("Details", "Details", "Employee", new { id = item.Id }, htmlAttributes: new { @class = "btn btn-dark" })
                @Html.ActionLink("Delete", "Delete", "Employee", new { id = item.Id }, htmlAttributes: new
           {
               @class = "btn btn-danger",
               onclick = "return confirm('Are you sure you want to delete this Employee?!')"
           })
            </td>
        </tr>
    }
</table>