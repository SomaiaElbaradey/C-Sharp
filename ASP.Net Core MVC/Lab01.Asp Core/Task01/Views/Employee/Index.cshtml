@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-action="Create" class="btn btn-primary">Create New</a>

<br />
<br />
<br />
<br />

<table class="table table-bordered">

    <tr>
        <th> @Html.DisplayNameFor(ww => ww.Name) </th>
        <th> @Html.DisplayNameFor(ww => ww.Age) </th>
        <th> @Html.DisplayNameFor(ww => ww.Department.DeptName) </th>
        <th> </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td> @Html.DisplayFor(ww => item.Name) </td>
            <td> @Html.DisplayFor(ww => item.Age) </td>
            <td> @Html.DisplayFor(ww => item.Department.DeptName) </td>
            
            <td>
                @Html.ActionLink("","","",new { id=item.Id})
                <a asp-action="Edit" asp-route-id="@item.Id" asp-route-name="@item.Name" class="btn btn-success">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
    }

</table>